<% if @user.errors.any? %>
  <div>
    <%= @user.errors.count %>error
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>

    <div class="form-group">
     <label for="inputName">Name</label>
     <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", :class => "form-control"%></p>
    </div>

    <div class="form-group">
     <label for="inputImage">Image</label>
     <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
    </div>


    <label for="user_introduction">Introduction</label>
     <p><%= f.text_area :introduction, autofocus: true, id:"user_introduction", :class => "form-control" %></p>

    <%= f.submit "Update User"  %>

    <% end %>



    </div>
  </div>
</div>

