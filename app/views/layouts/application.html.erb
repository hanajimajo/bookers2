<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/ca1289ead1.js" crossorigin="anonymous"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">

      <%= link_to "Bookers", root_path, class: 'navbar-brand' %>

      <ul class="navbar-nav ml-auto">

      <% if user_signed_in? %>
        <li><%= link_to " Home", user_path(current_user.id), class: 'fas fa-home nav-link text-light' %></li>

        <%= link_to "Users", users_path, class: 'fas fa-users nav-link text-light' %>

        <%= link_to "Books", books_path, class: 'fas fa-book-open nav-link text-light' %>

        <%= link_to "logout", destroy_user_session_path, class: 'fas fa-sign-out-alt nav-link text-light' %>

        <% else %>
        <li><%= link_to "Home", root_path, class: 'fas fa-home nav-link text-light' %></li>

        <%= link_to "About", home_about_path, class: 'fas fa-link nav-link text-light' %>

        <%= link_to "sign up", new_user_registration_path, class: 'fas fa-user-plus nav-link text-light' %>

        <%= link_to "login", user_session_path, class: 'fas fa-sign-in-alt nav-link text-light' %>

      <% end %>
       </ul>
      </div>
    </nav>

    <%= yield %>

<!--footer-->
  <footer class= "container mt-5">
    <div class= "row">
      <div class= "mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </footer>

  </body>
</html>
