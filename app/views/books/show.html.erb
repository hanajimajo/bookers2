<main>
  <% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">User info</h2>
      　<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      　   <table class="table">
      　   　<tbody>

      　     <tr>
      　       <th>name</th>
       　      <th><%= @book.user.name %></th>
       　    </tr>
            <tr>
      　       <th>introduction</th>
      　       <th><%= @book.user.introduction %></th>
      　     </tr>

      　     </tbody>
      　   </table>

      　   <div class ="row">

            <p><%= link_to '', edit_user_path(@book.user), class: 'fas fa-user-cog' %></p>

      　   </div>

          <table class="table">
            <h2 class="mt-3">New book</h2>
            <%= form_with model:@book_new, local:true do |f| %>
            <div class="form-group">
              <label for="title">Title</label>
              <p><%= f.text_field :title %></p>
            </div>

            <div class="form-group">
              <label for="body">Opinion</label>
              <p><%= f.text_field :body %></p>
            </div>
            <%= f.submit 'Create Book' %>
          </table>
          <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
           <table class="table">
              <tbody>

                  <th>
                  <%= link_to user_path(@book.user) do %>
                   <%=attachment_image_tag @book.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg" %>
                  <% end %>
                  <%= link_to user_path(@book.user.id) do %>
                   <%= @book.user.name %>
                  <% end %>
                  </th>
                  <th>
                    <%= @book.title %>
                  </th>
                  <th>
                    <%= @book.body %>
                  </th>

                  <% if @book.user == current_user %>
                  <td><%= link_to "Edit", edit_book_path(@book)%></td>
                  <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
                  <% end %>



              </tbody>
            </table>
        </div>
  </div>
</div>

</main>
